@model Contacts_Management_Application.Models.PersonUpdateViewModel.PersonsUpdateViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Contact</h2>
@using (Html.BeginForm("Update","",FormMethod.Post,new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(x =>x.Persons.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Persons.Id)
        @Html.TextBoxFor(x => x.Persons.Name, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Persons.SurName)
        @Html.TextBoxFor(x => x.Persons.SurName, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Persons.Email)
        @Html.TextBoxFor(x => x.Persons.Email, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Persons.Phone)
        @Html.TextBoxFor(x => x.Persons.Phone, null, new { @class = "form-control" })
    </div>
    <br/>
    <input type="submit" class="btn btn-primary" value="Save" ,row ="2" />
}